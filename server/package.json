{
    "name": "maxflow-zen-server",
    "version": "1.0.0",
    "description": "Backend server for MAX mini-application with PostgreSQL user storage",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "migrate": "npm run build && node dist/migrations/run.js",
        "migrate:dev": "tsx src/migrations/run.ts"
    },
    "keywords": [
        "max",
        "mini-app",
        "postgresql",
        "express"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "pg": "^8.11.3",
        "dotenv": "^16.3.1",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.5",
        "@types/pg": "^8.10.9",
        "@types/cors": "^2.8.17",
        "@types/jsonwebtoken": "^9.0.5",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    }
}